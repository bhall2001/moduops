script "card-module-report-behavior"on preOpenCard   lock screenend preOpenCardon openCard   // load Car Type data to UI   loadModuleDataend openCardon closeCard   set the dgText of group "dgModuleReport" to ""end closeCard/*** Load Car Type data from DB to UI*/on loadModuleData  local tDataA  local tModuleID  local tTempA    //  Get carType Table  put module.findMany() into tDataA    if tDataA is an array then    // get counts for Consignee, Drop Zone and Car Requests    repeat for each key aModule in tDataA      put tDataA[aModule]["id"] into tModuleID            // get count of Consignees      put consignee.findByModuleId(tModuleID) into tTempA      put the number of elements of tTempA into tDataA[aModule]["numConsignee"]            // get count of Drop Zones      put spot.findByModuleId(tModuleID)      put the number of elements of tTempA into tDataA[aModule]["numDropZone"]            put workorder.findByModuleId(tModuleID) into tTempA      put the number of elements of tTempA into tDataA[aModule]["numRequest"]     end repeat           // update the UI with the results of the query    set the dgData of group "dgModuleReport" to tDataA        // set the intial sort by name    set the dgProps["sort by column"] of group "dgModuleReport" to "name"  end ifend loadModuleData